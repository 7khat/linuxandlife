<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  <%- @getBlock("styles").add(["//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", "/style/bootstrap-rtl.css","http://fonts.googleapis.com/earlyaccess/droidarabicnaskh.css","/style/style.css"]).toHTML() %>
  
    <%- @getBlock("meta").toHTML() %>
</head>

<body role="document">
  <%- @getBlock("scripts").toHTML() %>
  <!-- show the chapters -->

    <div  class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">کتاب لینوکس و زندگی</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">روی جلد</a></li>
            <li><a href="/about.html">درباره</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    
    
    
  
  <div class="container" role="main">
  
  <div class="row"><div class="row-md-10 top-space-reserver" ></div><div>
  
  <div class="row">
  
    <div class="row"><dic class="col-md-12"><br><br></div></div>
     
    <div class="col-md-8">
    <%- @content %>
    </div > <!-- content -->
    
    
    <div class="col-md-3" >
      <a href="#" class="list-group-item active"><strong>فهرست</strong></a>
      <a href="/about.html" class="list-group-item">درباره کتاب لینوکس و زندگی</a>

      <% for article in @getCollection("html").findAllLive({relativeOutDirPath: "articles"},[{order:1}]).toJSON(): %>
        <% if article.chapter != @previous_chapter : %>
			<a class="list-group-item active" ><%= article.chapter %></a>
          <% @previous_chapter = article.chapter %>
        <% end %>
		<a class="list-group-item" href=<%- article.url %>><%= article.title %></a>
      <% end %>
      
      </ul>
    </div> <!--left menu-->
    
    
    
  </div> <!-- content row -->
  </div> <!-- row full page -->
  </div>
</body>
</html> 
